@model PruebaMainSoft_2.Models.AutoresHasLibro

@{
    ViewData["Title"] = "Edit";
}

<h4>Editar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AutoresId" />
            <div class="form-group">
                <label asp-for="LibrosIs8n" class="control-label"></label>
                <select asp-for="LibrosIs8n" class="form-control" asp-items="ViewBag.LibrosIs8n"></select>
                <span asp-validation-for="LibrosIs8n" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
